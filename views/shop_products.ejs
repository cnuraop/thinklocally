<% include _layouts/header %>

<div class="container-fluid bg-primary text-light">

    <h1><%= title %></h1>
    <p class="lead"><strong>Address:</strong> <%= shop.address%></p>
    <p><strong>Phone No: </strong> <%=shop.phonenumber%></p>
    <p><strong>Delivery time: </strong> Within <%= shop.deliverytime%> Mins</p>
</div>


<div class="container row products col-lg-6 col-md-offset-3">


    <div id="map" style="width:100%;height:300px;background:yellow"></div>

    <script>
        function initMap() {
            var myLatLng = {lat: Math.random()*0.2 + 17.3, lng: Math.random()*0.1 + 78.3};
            var storeLatLng = {lat: Math.random()*0.2 + 17.3, lng: Math.random()*0.1 + 78.3};


            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 11,
                center: storeLatLng
            });


            var marker1 = new google.maps.Marker({
                position: storeLatLng,
                map: map,
                title: 'Store Location!'
            });
            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: 'Your Location!'
            });
        }

    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAH7z_bSn4W2aEVS7CfU8Dvt9Lrg8nkmDw&callback=initMap"></script>


    <% products.forEach(function(p){ %>
    <div class="col-xs-12 col-md-6 p">
        <div class="card">
            <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
            <img class="pimage dim-img" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
        </a>
        <div class="text-center">
        <h3><%= p.title %></h3>
        <h4>Rs. <%= parseFloat(p.price).toFixed(2) %></h4>
            <a class="vd blue-button" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>

        </div>
            <div class="text-center card-footer text-muted"> (Delivery: Within <%= shop.deliverytime %> mins)</div>

        </div>
    </div>
        <% }); %>

</div>
<% include _layouts/footer %>
