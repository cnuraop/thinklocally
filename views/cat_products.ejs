<% include _layouts/header %>

<div class="index-content row products">

    <% products.forEach(function(p){ %>

    <div class="col-xs-12 col-md-4 p">
        <div class="card">
            <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                <img class="pimage dim-img" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
            </a>
            <div class="text-center" style="background-color: bisque">
                <h3><%= p.title %></h3>
                <h4>Rs <%= parseFloat(p.price).toFixed(2) %></h4>
                <a class="vd blue-button" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
            </div>
        </div>
    </div>

    <% }); %>

</div>

<% include _layouts/footer %>